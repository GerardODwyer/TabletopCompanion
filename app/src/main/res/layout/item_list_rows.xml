<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="175dp"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/description"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id"
        android:layout_below="@+id/id"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description"
        android:layout_below="@+id/description"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/lootedFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item"
        android:layout_below="@+id/item"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/lore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lootedFrom"
        android:layout_below="@+id/lootedFrom"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lore"
        android:layout_below="@+id/lore"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/unique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/type"
        android:layout_below="@+id/type"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/number"
         android:layout_height="wrap_content"
          android:layout_above="@+id/description"
             android:layout_alignParentStart="true"
            android:layout_toRightOf="@+id/id"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:text="Number:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_above="@+id/item"
        android:layout_alignParentStart="true"
        android:text="Description:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/item"
        android:layout_alignParentStart="true"
        android:text="Item:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:text="LootedFrom:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/type"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:text="Lore:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_above="@+id/unique"
        android:layout_alignParentStart="true"
        android:text="Type:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:textColor="@android:color/white"
        android:text="Unique:"
        android:textStyle="bold" />

</RelativeLayout>